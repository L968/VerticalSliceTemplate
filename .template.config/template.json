{
  "$schema": "http://json.schemastore.org/template",
  "author": "Lucas Constantino",
  "classifications": [
    "API",
    "Web",
    "C#"
  ],
  "identity": "VerticalSlice.Template",
  "name": "Vertical Slice Template",
  "shortName": "verticalslice-template",
  "sourceName": "VerticalSliceTemplate",
  "defaultName": "VerticalSliceProject",
  "preferNameDirectory": true,
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "symbols": {
    "lowerCaseProjectName": {
      "type": "generated",
      "generator": "casing",
      "parameters": {
        "source": "sourceName",
        "toLower": true
      },
      "replaces": "verticalslicetemplate"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [ ".git/**" ]
        }
      ]
    }
  ]
}